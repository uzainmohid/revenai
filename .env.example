# ── REVENAI Environment Variables ────────────────────────────────────────────
# Copy this file to .env and fill in your values.
# The app reads these at runtime via os.getenv().

# ── Database ──────────────────────────────────────────────────────────────────
# SQLite (default for local dev — no setup required):
DATABASE_URL=sqlite:///./revenai.db

# Postgres (for production on Render or similar):
# DATABASE_URL=postgresql://user:password@host:5432/revenai

# ── Auth ─────────────────────────────────────────────────────────────────────
# CHANGE THIS to a long random string in production!
JWT_SECRET_KEY=change-me-to-a-long-random-secret-in-production

# Token lifetime in minutes (default: 60)
JWT_EXPIRE_MINUTES=60

# ── CORS ─────────────────────────────────────────────────────────────────────
# Comma-separated list of allowed frontend origins.
# Use * only in development.
ALLOWED_ORIGINS=*

# ── Frontend ─────────────────────────────────────────────────────────────────
# URL the Streamlit app uses to reach the FastAPI backend.
API_URL=http://localhost:8000

# ── Server ───────────────────────────────────────────────────────────────────
PORT=8000
